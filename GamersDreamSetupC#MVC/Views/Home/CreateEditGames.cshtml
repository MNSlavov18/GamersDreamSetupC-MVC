@{
    ViewData["Title"] = "Create / Edit";
}

@model GamersDreamSetupC_MVC.Models.Game

<div class="text-center">
    <h1 class="display-4">Create or edit a game wish</h1>
</div>

<form asp-action="CreateEditGamesForm" asp-controller="Home">
    <label>Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id"/>
    <label class=" mt-4">Value lv</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.01" />
    <label class=" mt-4">Name</label>
    <input class="form-control" type="text" placeholder="Add game name" asp-for="Name" />

    <button class="btn btn-primary mt-4" type="submit">Submit</button>
</form>
